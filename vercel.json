{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/assets/:path*",
            "destination": "/web/dist/assets/:path*"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/web/dist/index.html"
        }
    ],
    "cleanUrls": true,
    "outputDirectory": "web/dist"
}