{
    "version": 2,
    "builds": [
        {
            "src": "server/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/src/index.ts"
        },
        {
            "source": "/assets/:path*",
            "destination": "/web/assets/:path*"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/web/index.html"
        }
    ],
    "cleanUrls": true
}